@model KYC_Portal_Admin.ViewModels.UserInfoVM
@{
    ViewBag.Title = "Edit";
}

<br />
<h2>
    Edit User
</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}


<form method="POST">
    <input type="hidden" name="id" value="@Model.docInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">FirstName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="firstname" value="@Model.docInfo.firstname" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">LastName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lastname" value="@Model.docInfo.lastname" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ContactNo</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="contactno" value="@Model.docInfo.contactno" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="emailid" value="@Model.docInfo.emailid" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="userpwd" value="@Model.docInfo.userpwd" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.docInfo.address" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="closed"></button>
                </div>
            </div>

        </div>
    }


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>

        </div>
    </div>


</form>

